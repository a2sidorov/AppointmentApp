<!DOCTYPE html>
<html>
<head>
  <title>Booking</title>
  <% include partials/head %>
</head>
<body>
  <div class="grid-container">
    <header class="header">
      <% include partials/client-navbar %>
    </header>
    <main id="main" class="booking">
      <div class="page-title">
        <H2>Book an appointment</H2>
      </div>
      <div class="contacts">
        <div class="first">
          <li><%= chosenContact %></li>
          <button class="material-icons" onclick="showDropdown()">expand_more</button>
        </div>
        <div class="other">
          <% contacts.forEach((contact) => { %>
            <% if (contact.local.email !== chosenContact) { %>
              <a href="/book/<%= contact._id %>"><%= contact.local.email %></a>
            <% } %>
          <% }); %>
        </div>
      </div>
      <% if (active) { %>
        <div class="calendar">
          <div class="section-title">
            <h3>Today is <%= dateObj.toLocaleDateString() %> <%= dateObj.toLocaleTimeString() %></h3>
          </div>
          <div class="month">
            <% const monthNames = ["January", "February", "March", "April", "May", "June", "Jule","August", "September", "Octocber", "November", "December"] %>
            <button type="button" onclick="getDays('<%= dateObj.toISOString() %>', 'prev')" class="material-icons">keyboard_arrow_left</button>
            <span id="month"><%= monthNames[dateObj.getMonth()] %></span>
            <button type="button" onclick="getDays('<%= dateObj.toISOString() %>', 'next')" class="material-icons">keyboard_arrow_right</button>
          </div>
          <ul class="days"> 
            <li>Mo</li>
            <li>Tu</li>
            <li>We</li>
            <li>Th</li>
            <li>Fr</li>
            <li>Sa</li>
            <li>Su</li>
          </ul>
          <ul id="days" class="days">
            <% (function() { %>
              <% days.forEach((day) => { %>
                <li>
                  <% if (day.isAvailable) { %> 
                      <div class="availableDays" onclick="setDay('<%= dateObj.toISOString() %>', this)"><%= day.num %></div> 
                  <% } else { %>
                      <div><%= day.num %></div>
                  <% } %>
                </li>
              <% }); %>
            <% })(); %>
          </ul>
        </div>
        <div class="time">
          <div class="section-title">
            <h3>Time</h3>
          </div>    
          <ul id="timetable">
            <% (function() { %>
                <% workhours.forEach((hour) => { %>
                    <% if (hour.isAvailable) { %>
                      <li><%= hour.time %></li>
                    <% } %>
                <% }); %>
            <% })(); %>
          </ul>
        <div class="reasonForVisit">
          <div class="section-title">
            <h3>Reason for visit</h3>
          </div>
          <div>
            <textarea id="reason" rows="5" cols="30" maxlength="150" name="reason" required></textarea>
          </div>
        </div>
        <button class="submitBtn" type="button" onclick="book()">Book Now</button>
      <% } else { %>
        <div class="statusMessage">This business is not currently available for booking.</div>
      <% } %>
      <div id="message"></div>
    </main>   
  </div>   
  <script src="/public/scripts/booking.js"></script>
  <script src="/public/scripts/shared.js"></script>
</body>
</html>