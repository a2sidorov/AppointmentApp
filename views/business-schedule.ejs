<% 'use strict'; %>
<!DOCTYPE html>
<html>
<head>
	<title>Schedule</title>
	<% include partials/head %>
</head>
<body>
  <div class="grid-container">
    <header class="header">
      <% include partials/business-navbar %>
    </header>
    <main id="main" class="schedule">
      <div class="page-title">
        <h4>Schedule</h4>
      </div>
      <div class=workdays>
        <div class="section-title">
          <h3>Workdays</h3>
        </div>
        <ul>
          <% (function() { %>
            <% const dayNames = ['Su', 'Mo', 'Tu', 'We', 'Th', 'Fr', 'Sa'];%>
            <% workdays.forEach((day) => { %>
              <% if (day.isAvailable) { %>
                <li class="checked" onclick="updateDays(this, '<%= day.num %>', '<%= day.isAvailable %>')"><%= dayNames[day.num] %></li>
              <% } else { %>
                <li onclick="updateDays(this, '<%= day.num %>', '<%= day.isAvailable %>')"><%= dayNames[day.num] %></li>
              <% } %>
            <% }); %>
          <% })(); %>
        </ul>
      </div>
      <div class="workhours">
        <div class="section-title">
          <h3>Working hours</h3>
        </div>
        <ul>
          <% (function() { %>
            <% let txt, rad, left, right, top, bottom, position; %>
            <% let angle = 285; %>
            <% let x = 0; %>
            <% let y = 0; %>
            <% let d = 75; %>
            <% if (active) { %>
              <button class="active" type="button" onclick="toggleStatus(this)">Stop</button>
            <% } else { %>
              <button type="button" onclick="toggleStatus(this)">Start</button>
            <% } %>
            <% workhours.forEach((time) => { %>
                <% txt = time.minute === 0 ? time.hour : time.minute %>
                <!-- txt = time.time.split(':')[1] === '30' ? '30' : time.time.split(':')[0]; -->
                <% rad = angle * (Math.PI / 180); %>
                <% x = Math.cos(rad) * d; %>
                <% y = Math.sin(rad) * d; %>
                <% position = `position: absolute; left: ${x}px; right: ${x}px; top: ${y}px; bottom: ${y}px` %>
                <% if (time.isAvailable) { %>
                  <li class="checked" onclick="updateTime(this, '<%= time.hour %>', '<%= time.minute %>', '<%= time.isAvailable %>')" style="<%= position %>" ><%= txt %></li>
                <% } else { %>
                  <li onclick="updateTime(this, '<%= time.hour %>', '<%= time.minute %>', '<%= time.isAvailable %>')" style="<%= position %>"><%= txt %></li>
                <% } %>
                <% angle = angle === 360 ? 15 : angle + 15; %>
                <% d += 1.5; %>
              <% }); %>
          <% })();%>
        </ul>
      </div>
      <div class="holidays">
        <div class="section-title">
          <h3>Upcoming holidays</h3>
        </div>
        <ul>
          <% (function() { %>
          <% holidays.forEach((holiday) => { %>
            <% if (holiday.isAvailable) { %>
              <li class="checked" onclick="updateHolidays(this, '<%= holiday.date %>', '<%= holiday.isAvailable %>')"><%= holiday.name %> <%= holiday.date %></li>
            <% } else { %>
              <li onclick="updateHolidays(this, '<%= holiday.date %>', '<%= holiday.isAvailable %>')"><%= holiday.name %> <%= holiday.date %></li>
            <% } %>
          <% }); %>
        <% })(); %>
        </ul>    
      </div>
      <button id="saveBtn" class="saveBtn" type="button" onclick="save()">Save</button>
      <div id="message"></div>
    </main>
  </div>
  <script src="/public/scripts/schedule.js"></script>
  <script src="/public/scripts/shared.js"></script>
</body>
</html>